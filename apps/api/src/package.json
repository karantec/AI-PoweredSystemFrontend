{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc",
    "start": "node dist/index.js",

    "test:anthropic": "tsx test-anthropic.js",
    "typecheck": "turbo run typecheck",

    "migrate": "npx tsx apps/api/src/db/migrate.ts",
    "db:push": "drizzle-kit push --config ../drizzle.config.cjs",
    "db:generate": "drizzle-kit generate --config ../drizzle.config.cjs",
    "db:studio": "drizzle-kit studio --config ../drizzle.config.cjs",
    "seed": "tsx db/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@hono/node-server": "^1.8.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.0.0",
    "openai": "^6.16.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.27.2",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
